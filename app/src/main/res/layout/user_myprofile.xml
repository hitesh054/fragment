<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hitesh054.fragment.Fragment.edit_myprofile_fragment"
    android:id="@+id/profile_fragment"
    android:background="@color/greylight"
    android:orientation="vertical">


    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:layout_gravity="center"
        android:elevation="40dp"
        card_view:cardBackgroundColor="@color/greylight"
        card_view:cardCornerRadius="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/whitepng"

            >
            <ImageView
                android:id="@+id/header_cover_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/whitepng"
                android:background="@drawable/background_login_uuper"/>

            <com.mikhaellopez.circularimageview.CircularImageView
                android:layout_width="200dp"

                android:layout_height="200dp"
                android:src="@drawable/dp"
                app:civ_border_color="@color/colorAccent"
                app:civ_border_width="4dp"
                android:layout_centerInParent="true"
                app:civ_shadow="true"
                app:civ_shadow_radius="10"

                android:id="@+id/circularImageView" />



            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/circularImageView"
                android:layout_centerHorizontal="true"
                android:text="                          "
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold" />
            <ImageButton
                android:id="@+id/go_to_edit_u"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/circularImageView"
                android:layout_marginLeft="14dp"
                android:layout_marginStart="14dp"
                android:background="@color/colorPrimary"
                android:layout_toEndOf="@+id/textView5"
                android:layout_toRightOf="@+id/textView5"
                app:srcCompat="@drawable/ic_edit_black_24dp" />
        </RelativeLayout>


    </android.support.v7.widget.CardView>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_person_black_24dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="45dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hitesh chandnani"
            android:layout_marginLeft="95dp"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginTop="30dp"
            android:textColor="@color/black"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9068295107"
            android:layout_marginLeft="95dp"
            android:textSize="15sp"
            android:layout_marginTop="70dp"
            android:textStyle="bold"
            android:textColor="@color/black"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_call_black_24dp"
            android:layout_marginTop="70dp"
            android:layout_marginLeft="45dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="chandnanihitesh0701@gmail.com"
            android:id="@+id/caller"
            android:layout_marginLeft="95dp"
            android:textSize="15sp"
            android:layout_marginTop="110dp"
            android:textStyle="bold"
            android:textColor="@color/black"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_email_black_24dp"
            android:layout_marginTop="110dp"
            android:layout_marginLeft="45dp"
            />

    </RelativeLayout>



</LinearLayout>